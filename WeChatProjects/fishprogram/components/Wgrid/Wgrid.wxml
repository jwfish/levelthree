
<view class="page">
    <view class="page__bd">
        <view class="weui-grids">
            <block wx:for="{{grids}}" wx:key="{{index}}">
                <navigator url="" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="{{item.url}}" />
                    <view class="weui-grid__label">{{item.tit}}</view>
                </navigator>
            </block>
        </view>
    </view>
</view>